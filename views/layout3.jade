//- layout: it's the header for users connected
doctype 5
html
  head
    title= title

    //- jQuery
    script(src='javascripts/jquery-1.9.0.min.js')

    script(src='routes/layout3.js')

    //- Bootstrap styles
    link(rel='stylesheet', href='bootstrap/css/bootstrap.min.css', media="screen")
    link(rel='stylesheet', href='bootstrap/css/bootstrap.responsive.min.css', media="screen")

    link(rel='stylesheet', href='stylesheets/styleLayout3.css')
  body

    .navbar-wrapper
      .container
        .navbar.navbar-inverse
          .navbar-inner
            a.brand(href="news")
              i.icon-th.icon-white
              |  Social
            ul.nav
              li: a(href="profil")
                i.icon-user.icon-white
                | My Profil
              li: a(href="news")
                i.icon-globe.icon-white
                | News
              li: a(href="messages")
                i.icon-comment.icon-white
                | Messages
              li: a(href="notifications")
                i.icon-eye-open.icon-white
                | Notifications
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.icon-cog.icon-white
                  | Settings
                  b.caret
                ul.dropdown-menu
                  li
                    a(href='settings')   
                      i.icon-wrench
                      | Account Settings
                  li.divider
                    //-li.nav-header blabla
                  li
                    a(href='/')   
                      i.icon-off
                      | Log out
            form.navbar-search.pull-right
              input.search-query(type="text", placeholder="Search")      
        block content
    #myCarousel.carousel.slide
      .carousel-inner
        .item
          img(src='images/1.jpg', alt='')
        .item.active
          img(src='images/2.jpg', alt='')
        .item
          img(src='images/3.jpg', alt='')
      a.left.carousel-control(href='#myCarousel', data-slide='prev') ‹
      a.right.carousel-control(href='#myCarousel', data-slide='next') ›



    //- Bootstrap code
    script(src='bootstrap/js/bootstrap.min.js')



