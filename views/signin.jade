extends layout

block content
  section
    .page-header
      h1 Sign In to Social.

    form.form-signin(action="/session/open", method="POST")
      h2.form-signin-heading Please identify yourself.
      input.input-block-level(type="text", name="username", placeholder="Username")
      input.input-block-level(type="password", name="password", placeholder="Password")
      .row
        .span9
          label.checkbox
            input(type="checkbox", value="Remember Me")
            | Remember Me
        .span3
          a(href="forgotPwd") Forgot your password?
      p
      button.btn.btn-large.btn-primary(type="submit") Sign In
