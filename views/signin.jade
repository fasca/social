extends layout

block content
  section
    .page-header
      h1 Sign In to Social.

    - if (!req.sessionCookie || typeof(req.social.users[req.sessionCookie.sessionId]) === "undefined")  
      form.form-signin(action="/session/open", method="POST")
        h2.form-signin-heading Please identify yourself.
        input.input-block-level(type="text", name="username", placeholder="Username")
        input.input-block-level(type="password", name="password", placeholder="Password")
        .row
          .span9
            label.checkbox
              input(name="rememberme", type="checkbox", value="true")
              | Remember Me
          .span3
            a(href="forgotPwd") Forgot your password?
        p
        button.btn.btn-large.btn-primary(type="submit") Sign In
        //- dev & test:
        P
        a(href="profil") ( test: -- My Profil -- )
        P
        a(href="news") ( test: -- News -- )
        P
        a(href="messages") ( test: -- Messages -- )
        P
        a(href="notifications") ( test: -- Notifications -- )
        P
        a(href="settings") ( test: -- Settings -- )
    - else
      section
        .hero-unit.inverse
          h1 Opened Session
          p You already have an opened session on this computer.<br> Please Log Out before to try to open another session.
          p
            a.btn.btn-primary.btn-large(href="/session/close") Log Out
