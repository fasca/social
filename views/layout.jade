
doctype 5
html
  head
    title= title

    //- jQuery
    script(src='javascripts/jquery-1.9.0.min.js')
    //- Bootstrap styles
    link(rel='stylesheet', href='bootstrap/css/bootstrap.min.css', media="screen")
    link(rel='stylesheet', href='bootstrap/css/bootstrap.responsive.min.css', media="screen")

    link(rel='stylesheet', href='stylesheets/style.css')
      
  header
    .container
      .navbar.navbar-inverse
        .navbar-inner
          - if (typeof(req.social.users[req.session.sessionId]) === "undefined")  
            a.brand(href="/")
              i.icon-th.icon-white
              |  Social
          - else
            a.brand(href="profil")
              i.icon-th.icon-white
              |  Social
          - if (typeof(req.social.users[req.session.sessionId]) === "undefined")
            ul.nav
              li: a(href="signin") Sign In
          - else
            - var userInfo = req.social.users[req.session.sessionId]
            ul.nav
              li: a(href="profil")
                i.icon-user.icon-white
                | #{userInfo.lastName} #{userInfo.firstName}
              li: a(href="news")
                i.icon-globe.icon-white
                | News
              li: a(href="messages")
                i.icon-comment.icon-white
                | Messages
              li: a(href="notifications")
                i.icon-eye-open.icon-white
                | Notifications
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.icon-cog.icon-white
                  | Settings
                  b.caret
                ul.dropdown-menu
                  li: a(href='settings')
                    i.icon-wrench
                    | Account Settings
                  li.divider
                  //-li.nav-header blabla
                  li: a(href='/session/close')
                    i.icon-off
                    | Log out
            form.navbar-search.pull-right
              input.search-query(type="text", placeholder="Search")

          //-form.navbar-search.pull-right
            //-input.search-query(type="text", placeholder="Search")

      block content

    //- Bootstrap code
    script(src='bootstrap/js/bootstrap.min.js')